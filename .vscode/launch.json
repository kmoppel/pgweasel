    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'pgweasel-rust'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pgweasel-rust",
                    "--package=pgweasel-rust"
                ],
                "filter": {
                    "name": "pgweasel-rust",
                    "kind": "bin"
                }
            },
            "args": [
                "-m",
                "2025-05-08",
                "error",
                "-level",
                "LOG",
                "./testdata/csvlog1.csv.gz"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'pgweasel-rust'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=pgweasel-rust",
                    "--package=pgweasel-rust"
                ],
                "filter": {
                    "name": "pgweasel-rust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}